<div id="homes">
  <header class="aligner">
    <div class="aligner-item">
      <%= image_tag("knottymasthead.png") %>
      <br/>
    </div>
  </header>

  <main class="aligner container-fluid">

    <div id="main" class="aligner-item twopane">
      <button id="register" type="button" class="btn btn-default">register</button>
      <button id="login" type="button" class="btn btn-default">login</button>
    </div>

    <div id="register1" class="aligner-item hidden">
      <h2>Pick a starting object<h2>
      <div class="twopane">
        <div id="token-select" class="row text-center">
          <h3 id="tokenerror"></h3>
          <div class="col-xs-6">
            <label for="brick">
              <input id="brick" name="token" type="radio" value="AaLWdxW4mCB4Z7i2nW5ocgM6cT7jWEybcD"/>
              <span>Brick</span>
            </label>

            <label for="steak">
              <input id="steak" name="token" type="radio" value="AVBLsxjac7LCYxiXcMnUAricYxVq1YgbkZ"/>
              <span>Steak</span>
              </label>
          </div>
          <div class="col-xs-6">
            <label for="bitcoin">
              <input id="bitcoin" name="token" type="radio" value="AL9VwZMgDQ2bqLXorU2bJoiMu3MjamZQFm"/>
              <span>Bitcoin</span>
            </label>

            <label for="phone">
              <input id="phone" name="token" type="radio" value="AcPeTwYT5s2xJmXpDCuMr3JWGvJ9vEMkNF"/>
              <span>Phone</span>
            </label>
          </div>
        </div>
        <button id="confirm" type="button" class="btn btn-default">confirm</button>
      </div>
    </div>

    <div id="register2" class="aligner-item hidden">
      <h2>Register</h2>
      <div class="twopane">
        <div id="addressInfo">
          <h3 id="createerror"></h3>
          <section>
          <label for="address">
            <span>5-digit address</span>
            <input id="address" name="address" type="text" class="createcode digits" placeholder="address" /input>
          </label>
          <h4>Hint: use the one on your card</h4>
          </section>
          <section>
          <label for="passcode">
            <span>7-digit password</span>
            <input id="passcode" name="passcode" type="text" class="createcode digits" placeholder="passcode" />
          </label>
            <h4>Hint: phone-numbers are 7 digits</h4>
          </section>
          <section>
          <label for="confirmcode">
            <span>confirm password</span>
            <input id="confirmcode" name="confirm" type="text" class="createcode digits" placeholder="confirm" />
          </label>
          </section>
        </div>
        <button id="create" type="button" class="btn btn-default">create</button>
      </div>
    </div>

    <div id="login1" class="aligner-item hidden">
      <h2>Login</h2>
      <div class="twopane">
        <div id="addressInfo">
          <h3 id="loginerror"></h3>
          <section>
            <label for="useid">
              <span>5-digit address</span>
              <input id="useid" name="useid" type="text" placeholder="address"> </input>
            </label>
            <h4>Hint: you probably used the one on your card</h4>
          </section>
          <section>
            <label for="logincode">
              <span>7-digit password</span>
              <input id="logincode" name="logincode" type="text" placeholder="passcode" />
            </label>
            <h4>Hint: you probably used your phone number</h4>
          </section>
        </div>
        <button id="show" type="button" class="btn btn-default">login</button>
      </div>
    </div>
  </main>
</div>
