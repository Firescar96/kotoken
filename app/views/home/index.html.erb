          <label for="brick" onclick="">Brick</label>

          <input id="steak" name="view" type="radio">
          <label for="steak" onclick="">Steak</label>

          <input id="bitcoin" name="view" type="radio">
          <label for="bitcoin" onclick="">Bitcoin</label>

          <input id="phone" name="view" type="radio">
          <label for="phone" onclick="">Phone</label>
        </div>
      </div>
      <div class="col-xs-6">
        <h4>Enter your account details<h4>
        <input id="uid" placeholder="unique id">
        <input id="logincode" placeholder="passcode" />
        <button>Login</button>
      </div>
  </div>
